# Discord Bot Configuration
# Copy this to .env and fill in your values

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_guild_id_for_testing

# Redis Configuration
REDIS_URL=redis://localhost:6379
# On Railway, this is auto-generated. Format: redis://user:password@host:port

# Instance ID for segregating data per Discord server
# Use different IDs for different bot instances
INSTANCE_ID=default

# Example for multiple instances:
# INSTANCE_ID=server-1   # First Discord server
# INSTANCE_ID=server-2   # Second Discord server
# etc...
